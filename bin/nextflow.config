profiles {
    standard {
        executor = 'local'
        docker.enabled = true

        process {
            withName: 'blast' {
                container = 'hadrieng/blast:2.7.1'
            }
            withName: 'centrifuge' {
                container = 'hadrieng/centrifuge:1.0.4_beta'
            }
            withName: 'diamond' {
                container = 'hadrieng/diamond:0.9.24'
            }
            withName: 'kaiju' {
                container = 'hadrieng/kaiju:1.6.3'
            }
            withName: 'kraken' {
                container = 'hadrieng/kraken:1.1'
            }
            withName: 'kraken2' {
                container = 'hadrieng/kraken2:2.0.7_beta'
            }
        }
    }
}